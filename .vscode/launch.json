{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug API",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceFolder}/cmd/api",
        "envFile": "${workspaceFolder}/.env",
        "preLaunchTask": "docker-up-deps"
      },
      {
        "name": "Debug Go API (Local)",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "${workspaceFolder}/cmd/api",
        "env": {
          "HTTP_PORT": "3000"
        },
        "args": [],
        "cwd": "${workspaceFolder}"
      },
      {
        "name": "Debug Worker",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceFolder}/cmd/worker",
        "envFile": "${workspaceFolder}/.env",
        "preLaunchTask": "docker-up-deps"
      }
    ]
  }
  